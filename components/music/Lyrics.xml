<?xml version="1.0" encoding="utf-8"?>
<component name="Lyrics" extends="Group">
    <children>
        <LayoutGroup layoutDirection="vert" horizAlignment="left" itemSpacings="[0, 30]">
            <Label id="previousLine" wrap="true" horizAlign="left" vertAlign="top" font="font:SmallSystemFont" opacity=".5" />
            <Label id="currentLine" wrap="true" horizAlign="left" vertAlign="top" font="font:SmallSystemFont" opacity="1.0" />
            <Label id="nextLine1" wrap="true" horizAlign="left" vertAlign="top" font="font:SmallSystemFont" opacity=".5" />
            <Label id="nextLine2" wrap="true" horizAlign="left" vertAlign="top" font="font:SmallSystemFont" opacity=".5" />
            <Label id="nextLine3" wrap="true" horizAlign="left" vertAlign="top" font="font:SmallSystemFont" opacity=".25" />
        </LayoutGroup>
    </children>
    <interface>
        <function name="findPosition" />
        <field id="lyricData" type="assocarray" onChange="onLyricDataChange" />
        <field id="positionTime" type="float" onChange="onPositionTimeChange" />
        <field id="width" type="integer" onChange="onWidthChange" />
    </interface>
</component>