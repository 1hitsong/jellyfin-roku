<?xml version="1.0" encoding="utf-8"?>
<component name="ChannelInfo" extends="Group">
  <children>
    <Rectangle id="backdrop" />

    <ScrollingLabel id="channelTitle" horizAlign="left" vertAlign="center" translation="[10, 0]" />
    <Poster id="channelLogo" visible="false" translation="[0, 0]" loadDisplayMode="scaleToFit" />

    <Rectangle id="borderTop" height="1" />
  </children>
  <interface>
    <field id="content" type="node" onChange="contentChanged" />
    <field id="width" type="integer" onChange="onWidthChanged" />
    <field id="height" type="integer" onChange="onHeightChanged" />
  </interface>
</component>